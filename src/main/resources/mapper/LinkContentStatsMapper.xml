<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trs.gov.kpi.dao.LinkContentStatsMapper">

    <resultMap id="LinkContentStatsMap" type="com.trs.gov.kpi.entity.LinkContentStats">
        <result column="siteId" jdbcType="INTEGER" property="siteId" />
        <result column="typeId" jdbcType="INTEGER" property="typeId" />
        <result column="url" jdbcType="VARCHAR" property="url" />
        <result column="md5" jdbcType="VARCHAR" property="md5" />
        <result column="checkTime" jdbcType="TIMESTAMP" property="checkTime" />
        <result column="infoErrorCount" jdbcType="INTEGER" property="infoErrorCount"/>
        <result column="state" jdbcType="INTEGER" property="state" />
    </resultMap>

    <select id="getLastLinkContentStats" resultMap="LinkContentStatsMap">
        select * from link‏contentstats
        where siteId = #{siteId}
        and typeId = #{typeId}
        and url = #{url}
        and checkTime =
        (select max(checkTime) from link‏contentstats where siteId = #{siteId} and typeId = #{typeId} and url = #{url} )
    </select>

</mapper>