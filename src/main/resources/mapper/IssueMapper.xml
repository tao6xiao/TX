  <select id="getEarliestIssueTime" resultType="java.util.Date">
    SELECT min(issueTime)
    FROM issue
  </select>

  <sql id="siteid_and_ids_where_sql">
    WHERE siteId = ${siteId}
    AND id IN
    <foreach collection="ids" item="item" open="(" close=")" separator=",">
      ${item}
    </foreach>
  </sql>

  <update id="handIssuesByIds" parameterType="java.util.List">
    UPDATE issue
    SET isResolved = 1
    <include refid="siteid_and_ids_where_sql"/>
  </update>

  <update id="ignoreIssuesByIds" parameterType="java.util.List">
    UPDATE issue
    SET isResolved = 2
    <include refid="siteid_and_ids_where_sql"/>
  </update>

  <update id="delIssueByIds" parameterType="java.util.List">
    UPDATE issue
    SET isDel = 1
    <include refid="siteid_and_ids_where_sql"/>
  </update>

  <select id="getIdsUpdateNotInTime" resultType="int">
    SELECT
    customer2
    FROM issue WHERE 1=1
    <include refid="all_conditions_sql"/>
