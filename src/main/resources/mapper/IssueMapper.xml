  <select id="getIndexUrl" resultType="String">
    SELECT indexUrl
    FROM monitorsite
    WHERE siteId = #{param.siteId}
  </select>

  <select id="getIndexAvailability" resultType="int">
    SELECT count(1)
    FROM issue
    WHERE 1=1
    <include refid="where_sql"/>
  </select>

  <select id="getMonitorTime" resultType="java.sql.Date">
    SELECT issueTime
    FROM issue
    WHERE 1=1
    <include refid="where_sql"/>
    ORDER BY issueTime DESC LIMIT 1
  </select>

</mapper>