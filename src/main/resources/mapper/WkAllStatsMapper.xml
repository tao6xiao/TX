<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trs.gov.kpi.dao.WkAllStatsMapper">

    <resultMap id="BaseResultMap" type="com.trs.gov.kpi.entity.wangkang.WkAllStats">
        <result column="checkId" jdbcType="INTEGER" property="checkId" />
        <result column="siteId" jdbcType="INTEGER" property="siteId" />
        <result column="updateContent" jdbcType="INTEGER" property="updateContent" />
        <result column="avgSpeed" jdbcType="INTEGER" property="avgSpeed" />
        <result column="errorInfo" jdbcType="INTEGER" property="errorInfo" />
        <result column="invalidLink" jdbcType="INTEGER" property="invalidLink" />
        <result column="checkTime" jdbcType="TIMESTAMP" property="checkTime" />
    </resultMap>
    <sql id="Base_Column_List">
        checkId, siteId, updateContent, avgSpeed, errorInfo, invalidLink
    </sql>



    <select id="select" resultType="com.trs.gov.kpi.entity.wangkang.WkAllStats">
        SELECT
        *
        FROM ${filter.table.tableName} WHERE 1=1
        <include refid="com.trs.gov.kpi.dao.CommonMapper.all_conditions_sql"/>
    </select>

    <select id="selectOnce" resultType="com.trs.gov.kpi.entity.wangkang.WkAllStats">
        SELECT
        *
        FROM ${filter.table.tableName} WHERE 1=1
        <include refid="com.trs.gov.kpi.dao.CommonMapper.all_conditions_sql"/>
    </select>

    <select id="getOneWeekUpdateCount" resultType="int">
        select
        SUM(updateContent)
        from wkallstats
        where checkTime BETWEEN #{beginTime, jdbcType=TIMESTAMP} and #{endTime, jdbcType=TIMESTAMP}
        and siteId = #{siteId, jdbcType=INTEGER}
    </select>

    <select id="getLastTimeUpdateContent" parameterType="java.lang.Integer" resultType="java.util.Date">
        select
        MAX(checkTime)
        from wkallstats
        where updateContent <![CDATA[>]]> 0
        and siteId = #{siteId, jdbcType=INTEGER}
    </select>

</mapper>