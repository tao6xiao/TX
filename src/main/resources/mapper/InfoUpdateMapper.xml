<mapper namespace="com.trs.gov.kpi.dao.InfoUpdateMapper">


    <resultMap id="infoUpdateMap" type="com.trs.gov.kpi.entity.InfoUpdate">
        <id column="id" property="id"/>
        <result column="subTypeId" property="issueTypeId"/>
        <result column="detail" property="chnlUrl"/>
        <result column="customer1" property="chnlName"/>
        <result column="customer2" property="chnlId"/>
        <result column="issueTime" property="checkTime"/>
    </resultMap>

    <sql id="Query_Condition_IssueBase">
        AND siteId = #{issueBase.siteId}
        AND typeId = 2
        AND isDel = 0
        <if test="issueBase.beginDateTime != null and issueBase.beginDateTime != ''">
            AND issueTime
            <![CDATA[
            >
            ]]>
            #{issueBase.beginDateTime}
        </if>
        <if test="issueBase.endDateTime != null and issueBase.endDateTime != ''">
            AND issueTime
            <![CDATA[
            <
            ]]>
            #{issueBase.endDateTime}
        </if>
    </sql>

    <sql id="Query_Search_IssueBase">
        <if test="issueBase.searchField == 'id'">
            AND id LIKE concat('%',#{issueBase.searchText,jdbcType=VARCHAR},'%')
        </if>
        <if test="issueBase.searchField == 'issueType' and issueBase.searchText != ''">
            AND subTypeId IN (
            <foreach collection="issueBase.ids" item="item" separator=",">
                #{item}
            </foreach>
            )
        </if>
        <if test="issueBase.searchField == null or issueBase.searchField == ''">
            AND (
            id LIKE concat('%',#{issueBase.searchText,jdbcType=VARCHAR},'%')
            OR
            subTypeId IN (
            <foreach collection="issueBase.ids" item="item" separator=",">
                #{item}
            </foreach>
            )
            )
        </if>
    </sql>

    <select id="getHandledIssueCount" resultType="int">
        SELECT count(1)
        FROM issue
        WHERE isResolved IN (1,2)
        <include refid="Query_Condition_IssueBase"/>
    </select>

    <select id="getUnhandledIssueCount" resultType="int">
        SELECT count(1)
        FROM issue
        WHERE isResolved = 0
        <include refid="Query_Condition_IssueBase"/>
        <include refid="Query_Search_IssueBase"/>
    </select>

    <select id="getUpdateNotIntimeCount" resultType="int">
        SELECT count(1)
        FROM issue
        WHERE isResolved = 0
        AND subTypeId = 1
        <include refid="Query_Condition_IssueBase"/>
    </select>

    <select id="getUpdateWarningCount" resultType="int">
        SELECT count(1)
        FROM issue
        WHERE isResolved = 0
        AND siteId = #{issueBase.siteId}
        AND typeId = 51
        AND subTypeId = 1
        <if test="issueBase.beginDateTime != null and issueBase.beginDateTime != ''">
            AND issueTime
            <![CDATA[
            >
            ]]>
            #{issueBase.beginDateTime}
        </if>
        <if test="issueBase.endDateTime != null and issueBase.endDateTime != ''">
            AND issueTime
            <![CDATA[
            <
            ]]>
            #{issueBase.endDateTime}
        </if>
    </select>

    <select id="getSelfWarningCount" resultType="int">
        SELECT count(1)
        FROM issue
        WHERE isResolved = 0
        AND siteId = #{issueBase.siteId}
        AND typeId = 51
        AND subTypeId = 2
        <if test="issueBase.beginDateTime != null and issueBase.beginDateTime != ''">
            AND issueTime
            <![CDATA[
            >
            ]]>
            #{issueBase.beginDateTime}
        </if>
        <if test="issueBase.endDateTime != null and issueBase.endDateTime != ''">
            AND issueTime
            <![CDATA[
            <
            ]]>
            #{issueBase.endDateTime}
        </if>
    </select>

    <select id="getIssueHistoryCount" resultType="int">
        SELECT count(1)
        FROM issue
        WHERE 1=1
        <include refid="Query_Condition_IssueBase"/>
    </select>


    <select id="getIssueList" resultMap="infoUpdateMap">
        SELECT id,
        subTypeId,
        detail,
        customer1,
        customer2,
        issueTime
        FROM issue
        WHERE isResolved = 0
        <include refid="Query_Condition_IssueBase"/>
        <include refid="Query_Search_IssueBase"/>
        limit #{pageIndex},#{pageSize}
    </select>

    <select id="getAllUpdateNotInTime" resultType="java.util.Map">
        SELECT
        customer2,count(1)
        FROM issue
        WHERE isResolved = 0
        AND isDel = 0
        AND siteId = #{issueBase.siteId}
